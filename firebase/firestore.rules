rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to wheel configuration
    match /wheelConfig/{document} {
      allow read: if true;
      allow write: if false; // Only admin can write
    }
    
    // Allow read/write access to spins for authenticated users
    match /spins/{spinId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow read access to settings
    match /settings/{document} {
      allow read: if true;
      allow write: if false; // Only admin can write
    }
    
    // Allow read/write access to user data for authenticated users
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
